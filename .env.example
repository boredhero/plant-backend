# Camera source (ustreamer on rockpro64)
CAMERA_HOST=
CAMERA_PORT=8080

# HLS output directory (where ffmpeg writes segments)
HLS_DIR=/var/www/planting.example.com/cam/hls

# Snapshot/timelapse storage
DATA_DIR=/home/user/plantcam-data

# Snapshot interval in minutes
SNAPSHOT_INTERVAL_MIN=5

# Timelapse stitch hour (24h format, when daily timelapse is generated)
TIMELAPSE_STITCH_HOUR=23

# Multi-camera config (optional â€” if set, overrides single CAMERA_HOST/PORT for snapshots)
# Each camera needs CAM<N>_PORT and optionally CAM<N>_LABEL
CAM1_PORT=8080
CAM1_LABEL=Overhead
CAM2_PORT=8081
CAM2_LABEL=Side View

# Flask
FLASK_HOST=0.0.0.0
FLASK_PORT=5050
FLASK_DEBUG=false
